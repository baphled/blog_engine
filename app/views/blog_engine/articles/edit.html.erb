<%= simple_form_for(@article, :url => blog_engine_article_path, :html => {:method => :put}) do |f| %>
  <%= f.input :title %>
  <%= f.input :content, :as => :text, :input_html => { :value => @article.content_source } %>
  <%= f.input :tags %>

  <fieldset id="categories">
    <%= f.association :categories, :collection => BlogEngine::Category.find(:all), :prompt => 'Select Category', :as => :check_boxes %>
  </fieldset>
  <%= f.button :submit, 'Update Draft' %>
  <%= f.submit 'Publish' %>
<% end %>